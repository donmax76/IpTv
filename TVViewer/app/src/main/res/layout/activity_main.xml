<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".MainActivity">

    <!-- Player full screen -->
    <FrameLayout
        android:id="@+id/playerContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- OTT Navigator style: no default controls, clean video -->
        <androidx.media3.ui.PlayerView
            android:id="@+id/playerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:show_buffering="when_playing"
            app:use_controller="false" />

        <ProgressBar
            android:id="@+id/loadingIndicator"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:visibility="gone"
            android:indeterminateTint="#FFFFFF" />

        <View
            android:id="@+id/tapOverlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="90dp"
            android:clickable="true"
            android:focusable="true"
            android:background="@android:color/transparent" />

        <TextView
            android:id="@+id/timeDisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:textColor="#CCFFFFFF"
            android:textSize="14sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/emptyState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/select_channel"
            android:textColor="#888888"
            android:textSize="18sp"
            android:visibility="visible" />

        <!-- Left edge: open channel list -->
        <View
            android:id="@+id/leftEdgeZone"
            android:layout_width="56dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:clickable="true"
            android:focusable="true"
            android:background="@android:color/transparent" />

        <!-- Right edge: hide panels -->
        <View
            android:id="@+id/rightEdgeZone"
            android:layout_width="56dp"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:clickable="true"
            android:focusable="true"
            android:background="@android:color/transparent" />

        <!-- OTT Navigator style: compact bottom bar, always visible when playing -->
        <LinearLayout
            android:id="@+id/playerBottomBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="10dp"
            android:paddingVertical="6dp"
            android:background="#CC000000"
            android:elevation="8dp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/bottomBarChannelLogo"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="8dp"
                android:scaleType="fitCenter"
                android:background="#26000000"
                android:contentDescription="@null" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:minWidth="0dp">
                <TextView
                    android:id="@+id/bottomBarChannelName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textColor="#FFFFFF"
                    android:textSize="13sp" />
                <TextView
                    android:id="@+id/bottomBarEpgInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textColor="#AAAAAA"
                    android:textSize="11sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/bottomBarVideoInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:textColor="#888888"
                android:textSize="10sp" />

            <ImageButton
                android:id="@+id/btnPlayPause"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginEnd="4dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/play_pause"
                android:src="@android:drawable/ic_media_play" />

            <ImageButton
                android:id="@+id/btnAspectRatio"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginEnd="4dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/aspect_ratio"
                android:src="@android:drawable/ic_menu_crop" />

            <ImageButton
                android:id="@+id/btnFullscreen"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/fullscreen"
                android:src="@drawable/ic_fullscreen" />
        </LinearLayout>
    </FrameLayout>

    <!-- Left side: settings panel (left) + channel list (right), tap arrow to show -->
    <LinearLayout
        android:id="@+id/leftSideContainer"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:orientation="horizontal"
        android:elevation="12dp"
        android:visibility="gone">

        <!-- Settings panel: playlists, category, settings, TV guide, favorites (hidden until arrow clicked) -->
        <LinearLayout
            android:id="@+id/settingsPanel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#E6000000"
            android:padding="8dp"
            android:minWidth="140dp"
            android:visibility="gone">

            <ImageButton
                android:id="@+id/btnHideLeft"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="end"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/hide_channels"
                android:src="@android:drawable/ic_menu_close_clear_cancel" />

            <Spinner
                android:id="@+id/playlistSpinner"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="4dp"
                android:minWidth="100dp"
                android:background="@drawable/spinner_background" />

            <Spinner
                android:id="@+id/categorySpinner"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="8dp"
                android:minWidth="60dp"
                android:background="@drawable/spinner_background" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="8dp">
                <ImageButton
                    android:id="@+id/btnFavorites"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/favorites"
                    android:src="@android:drawable/btn_star_big_off" />
                <ImageButton
                    android:id="@+id/btnSettings"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/settings"
                    android:src="@android:drawable/ic_menu_preferences" />
                <ImageButton
                    android:id="@+id/btnTvGuide"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/tv_guide"
                    android:src="@android:drawable/ic_menu_agenda" />
            </LinearLayout>
        </LinearLayout>

        <!-- Channel list: transparent, arrow at top opens settings -->
        <LinearLayout
            android:id="@+id/channelPanel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#15000000"
            android:padding="4dp"
            android:minWidth="200dp"
            android:maxWidth="300dp">

            <!-- Arrow at top: click to open settings menu -->
            <ImageButton
                android:id="@+id/btnMenuArrow"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/settings"
                android:src="@drawable/ic_arrow_left"
                android:padding="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <EditText
                    android:id="@+id/searchChannels"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:hint="@string/search_channels"
                    android:inputType="text"
                    android:imeOptions="actionSearch"
                    android:background="@drawable/spinner_background"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#888888"
                    android:paddingHorizontal="12dp" />
                <ImageButton
                    android:id="@+id/btnHideChannels"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="4dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/hide_channels"
                    android:src="@android:drawable/ic_menu_close_clear_cancel" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="4dp"
                android:clipToPadding="false"
                android:paddingVertical="4dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Right side: image and sound settings (DPAD_RIGHT) - compact, visible focus -->
    <LinearLayout
        android:id="@+id/rightSettingsPanel"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:orientation="vertical"
        android:background="#E6000000"
        android:minWidth="140dp"
        android:maxWidth="160dp"
        android:elevation="12dp"
        android:visibility="gone"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/image_sound_settings"
                android:textColor="#FFFFFF"
                android:textSize="13sp"
                android:gravity="center" />
            <ImageButton
                android:id="@+id/btnHideRightPanel"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/btn_right_panel_focused"
                android:contentDescription="@string/hide_channels"
                android:src="@android:drawable/ic_menu_close_clear_cancel" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/aspect_ratio"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:layout_marginTop="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="2dp">
            <Button
                android:id="@+id/btnAspectFit"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:minHeight="40dp"
                android:text="@string/aspect_fit"
                android:textSize="12sp"
                android:background="@drawable/btn_right_panel_focused"
                android:focusable="true"
                android:layout_marginBottom="2dp" />
            <Button
                android:id="@+id/btnAspect169"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:minHeight="40dp"
                android:text="@string/aspect_16_9"
                android:textSize="12sp"
                android:background="@drawable/btn_right_panel_focused"
                android:focusable="true"
                android:layout_marginBottom="2dp" />
            <Button
                android:id="@+id/btnAspect43"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:minHeight="40dp"
                android:text="@string/aspect_4_3"
                android:textSize="12sp"
                android:background="@drawable/btn_right_panel_focused"
                android:focusable="true"
                android:layout_marginBottom="2dp" />
            <Button
                android:id="@+id/btnAspectFill"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:minHeight="40dp"
                android:text="@string/aspect_fill"
                android:textSize="12sp"
                android:background="@drawable/btn_right_panel_focused"
                android:focusable="true" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/volume"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:layout_marginTop="10dp" />

        <SeekBar
            android:id="@+id/volumeSeekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:max="100"
            android:progress="100" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/video_info"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:layout_marginTop="8dp" />
        <TextView
            android:id="@+id/videoInfoText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textColor="#CCFFFFFF"
            android:textSize="11sp"
            android:text="â€”" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/playback_speed"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:layout_marginTop="8dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="2dp">
            <Button
                android:id="@+id/btnSpeed05"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:minHeight="36dp"
                android:textSize="11sp"
                android:text="0.5x"
                android:background="@drawable/btn_right_panel_focused"
                android:focusable="true"
                android:layout_marginEnd="2dp" />
            <Button
                android:id="@+id/btnSpeed1"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:minHeight="36dp"
                android:textSize="11sp"
                android:text="1x"
                android:background="@drawable/btn_right_panel_focused"
                android:focusable="true"
                android:layout_marginEnd="2dp" />
            <Button
                android:id="@+id/btnSpeed125"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:minHeight="36dp"
                android:textSize="11sp"
                android:text="1.25x"
                android:background="@drawable/btn_right_panel_focused"
                android:focusable="true"
                android:layout_marginEnd="2dp" />
            <Button
                android:id="@+id/btnSpeed15"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:minHeight="36dp"
                android:textSize="11sp"
                android:text="1.5x"
                android:background="@drawable/btn_right_panel_focused"
                android:focusable="true"
                android:layout_marginEnd="2dp" />
            <Button
                android:id="@+id/btnSpeed2"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:minHeight="36dp"
                android:textSize="11sp"
                android:text="2x"
                android:background="@drawable/btn_right_panel_focused"
                android:focusable="true" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/audio_track"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:layout_marginTop="8dp" />
        <Spinner
            android:id="@+id/audioTrackSpinner"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="2dp"
            android:minHeight="40dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:background="@drawable/btn_right_panel_focused" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/subtitles"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:layout_marginTop="8dp" />
        <Spinner
            android:id="@+id/subtitleSpinner"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="2dp"
            android:minHeight="40dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:background="@drawable/btn_right_panel_focused" />
        </LinearLayout>
        </ScrollView>
    </LinearLayout>
</FrameLayout>
