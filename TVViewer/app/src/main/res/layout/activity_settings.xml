<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:navigationIcon="?attr/homeAsUpIndicator" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="16dp">
            <TextView
                android:id="@+id/versionText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />
            <Button
                android:id="@+id/btnCheckUpdates"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@drawable/settings_item_focused"
                android:focusable="true"
                android:text="@string/check_for_updates" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/player"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginTop="16dp" />
        <Spinner
            android:id="@+id/playerSpinner"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/settings_item_focused"
            android:focusable="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/quality"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginTop="24dp" />
        <Spinner
            android:id="@+id/qualitySpinner"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/settings_item_focused"
            android:focusable="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/language"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginTop="24dp" />
        <Spinner
            android:id="@+id/languageSpinner"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/settings_item_focused"
            android:focusable="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/buffer_mode"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginTop="24dp" />
        <Spinner
            android:id="@+id/bufferSpinner"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/settings_item_focused"
            android:focusable="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/list_display"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginTop="24dp" />
        <Spinner
            android:id="@+id/listDisplaySpinner"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/settings_item_focused"
            android:focusable="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/list_autohide"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginTop="24dp" />
        <Spinner
            android:id="@+id/listAutohideSpinner"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/settings_item_focused"
            android:focusable="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/time_display"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginTop="24dp" />
        <Spinner
            android:id="@+id/timeDisplaySpinner"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/settings_item_focused"
            android:focusable="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/custom_channels"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginTop="24dp" />
        <EditText
            android:id="@+id/addChannelName"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:hint="@string/channel_name"
            android:inputType="text"
            android:background="@drawable/spinner_background"
            android:textColor="#FFFFFF"
            android:textColorHint="#888888" />
        <EditText
            android:id="@+id/addChannelUrl"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:hint="@string/channel_url"
            android:inputType="textUri"
            android:background="@drawable/spinner_background"
            android:textColor="#FFFFFF"
            android:textColorHint="#888888" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">
            <Button
                android:id="@+id/btnAddChannel"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="@string/add_playlist"
                android:layout_marginEnd="4dp" />
            <Button
                android:id="@+id/btnAddMedeniyyet"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="@string/add_mədəniyyət"
                android:layout_marginStart="4dp" />
        </LinearLayout>
        <ListView
            android:id="@+id/customChannelsList"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/spinner_background"
            android:divider="#333333"
            android:dividerHeight="1dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/custom_playlists"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginTop="24dp" />
        <EditText
            android:id="@+id/addPlaylistName"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:hint="@string/playlist_name"
            android:inputType="text"
            android:background="@drawable/spinner_background"
            android:textColor="#FFFFFF"
            android:textColorHint="#888888" />
        <EditText
            android:id="@+id/addPlaylistUrl"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:hint="@string/playlist_url"
            android:inputType="textUri"
            android:background="@drawable/spinner_background"
            android:textColor="#FFFFFF"
            android:textColorHint="#888888" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">
            <Button
                android:id="@+id/btnAddPlaylist"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="@string/add_playlist"
                android:layout_marginEnd="4dp" />
            <Button
                android:id="@+id/btnAddMultiplePlaylists"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="@string/add_multiple_playlists"
                android:layout_marginStart="4dp" />
        </LinearLayout>

        <ListView
            android:id="@+id/customPlaylistsList"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/spinner_background"
            android:divider="#333333"
            android:dividerHeight="1dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/error_log"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginTop="24dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/error_log_hint"
            android:textColor="#888888"
            android:textSize="12sp"
            android:layout_marginTop="4dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">
            <Button
                android:id="@+id/btnCopyErrors"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="@string/copy_errors"
                android:layout_marginEnd="4dp" />
            <Button
                android:id="@+id/btnShareErrors"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="@string/share_errors"
                android:layout_marginStart="4dp" />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/crash_reports"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginTop="24dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/crash_reports_hint"
            android:textColor="#888888"
            android:textSize="12sp"
            android:layout_marginTop="4dp" />
        <EditText
            android:id="@+id/crashFirebaseId"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:hint="@string/firebase_project_id"
            android:inputType="text"
            android:background="@drawable/spinner_background"
            android:textColor="#FFFFFF"
            android:textColorHint="#888888" />
        <EditText
            android:id="@+id/crashWebhookUrl"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:hint="@string/webhook_url"
            android:inputType="textUri"
            android:background="@drawable/spinner_background"
            android:textColor="#FFFFFF"
            android:textColorHint="#888888" />
        <Button
            android:id="@+id/btnTestCrash"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:text="@string/test_crash" />
    </LinearLayout>
</ScrollView>
